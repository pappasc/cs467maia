<div id="header">
    <img src="images/MaiaGroupHeader.jpg" width="100%" height="100%" alt=""/>
</div>

<div class="column-wrap">
    <h2 align="center">User Profile</h2>
    <div>
        <section>
            <nav>
                <ul>
		    <li><button id="homeButton" onclick="gotoHome()">Home</button></li>
                    <li><button id="awardsButton" onclick="gotoAwards('manage')">Manage Awards</button></li>
                    <li><button id="userUpdateButton" onclick="updateUser()">Save</button></li>
                    <li><button id="logoutButton" onclick="logoutUser()">Logout</button></li>
                </ul>
            </nav>
            <article>
	    {{#if isView}}
		{{#each errorMessage}}
                    <div>{{field}} is {{message}}</div>
		    {{/each}}
                {{/if}}
                <table>
                    <tr>
                        <td>
                            Username
                        </td>
                        <td></td>
                    </tr>
                    <tr>
                        <td>
                                {{email}}
                        </td>
                    </tr>
                    <tr>
                        <td>
                            First name                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            Last name
                        </td>
                    </tr>
                    <tr>
                        <td>                        
                            <input type="text" name="Fname" id="FName" size="30" value={{firstName}}> 
                            &nbsp;
                            <input type="text" name="Lname" id="LName" size="30" value={{lastName}}>
                        </td>
                    </tr>
                    <tr/>
                    <tr>
                        <td>
                            Password
                        </td>
                    </tr>
                    <tr>
                        <td>
                            **********
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Signature
                        </td>
                    </tr>
                    <tr>
                        <td>
                                {{signature}}
                        </td>
                    </tr>

                </table>
            </article>
        </section>
    </div>
</div>
	