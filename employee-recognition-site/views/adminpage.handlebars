<div id="header">
    <img src="images/MaiaGroupHeader.jpg" width="100%" height="100%" alt=""/>
</div>

<div class="column-wrap">
    <h2 align="center">Administrator Profile</h2>
    <div>
        <section>
            <nav>
                <ul>
                    {{#if update}}
                        <li><button id="updateAdminButton" onclick="updateAdmin({{adminId}})">Update</button></li>
                    {{else}}
                        <li><button id="saveAdminButton" onclick="saveAdmin()">Save</button></li>
                    {{/if}}
                    <li><button id="cancelButton" onclick="gotoAdmins()">Cancel</button></li>
                </ul>
            </nav>

            <article>
                <table>
                    <tr>
                        <td>
                            Username
                        </td>
                        <td></td>
                    </tr>
                    <tr>
                        <td>
                            <input type="email" name="username" id="Username" size="100" value={{email}}>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Firstname                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            Lastname
                        </td>
                    </tr>
                    <tr>
                        <td>                        
                            <input type="text" name="Fname" id="FName" size="30" value={{firstName}}> 
                            &nbsp;
                            <input type="text" name="Lname" id="LName" size="30" value={{lastName}}>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Password
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <input type="password" name="password" id="Password" size="20" value="{{password}}">
                        </td>
                    </tr>
                </table>
            </article>
        </section>
    </div>
</div>
	