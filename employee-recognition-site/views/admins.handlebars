<div id="header">
    <img src="./../images/MaiaGroupHeader.jpg" width="100%" height="100%" alt=""/>
</div>

<div class="column-wrap">
     <h2 id="awardTitle" align="center">Administrators</h2>
     <div>
	    <section>
            <nav>
                <ul>
                    <li><button id="userbutton" onclick="gotoAdmin()">Add Admin</button></li>
                    <li><button id="userbutton" onclick="gotoAdminAccount()">Update</button></li>
                    <li><button id="userbutton" onclick="deleteAdminInfo()">Remove</button></li>
                    <li></li>
                    <li></li>
                    <li><button id="home" onclick="gotoHome()">Home</button></li>
                    <li><button id="logoutButton" onclick="logoutUser()">Logout</button></li>
                </ul>
            </nav>

            <article id="EmplContainer">
                <div style="height:500px;overflow:auto;">
                
                    <form action="/admins" method="post">
                        <table>
                            <thead>
                                <th>Select</th>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Created on</th>
                            </thead>
                            {{#each admins}}
                                <tr>
                                    <td align="center"><input type="radio" name="admin" value={{admin_id}}></td>
                                    <td align="center">{{admin_id}}</td>
                                    <td align="center">{{first_name}} {{last_name}}</td>
                                    <td align="center">{{email_address}}</td>
                                    <td align="center">{{created_timestamp}}</td>
                                </tr>
                            {{/each}}
                        </table>
                    </form>                
                </div>
            </article>
        </section>
    </div>
</div>


