<div id="header">
    <img src="./../images/MaiaGroupHeader.jpg" width="100%" height="100%" alt=""/>
</div>

<div class="column-wrap">
     <h2 id="awardTitle" align="center">Employees</h2>
     <div>
	    <section>
            <nav>
                <ul>
                    <li><button id="userbutton" onclick="gotoNewAccount()">Add User</button></li>
                    <li><button id="userbutton" onclick="gotoUserAccount()">Update</button></li>
                    <li><button id="userbutton" onclick="deleteUserInfo()">Remove</button></li>
                    <li></li>
                    <li></li>
                    <li><button id="homeButton" onclick="gotoHome()">Home</button></li>
                    <li><button id="logoutButton" onclick="logoutUser()">Logout</button></li>
                </ul>
            </nav>

            <article id="EmplContainer">
                <div style="height:500px;overflow:auto;">
                {{#if someUsers}}
                    <form action="/employees" method="post">
                        <table>
                            <thead>
                                <th>Select</th>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Created on</th>
                            </thead>
                            {{#each users}}
                                <tr>
                                    <td align="center"><input type="radio" name="employee" value={{user_id}}></td>
                                    <td align="center">{{user_id}}</td>
                                    <td align="center">{{first_name}} {{last_name}}</td>
                                    <td align="center">{{email_address}}</td>
                                    <td align="center">{{created_timestamp}}</td>
                                </tr>
                            {{/each}}
                        </table>
                    </form> 
		    {{else}}
		    <div>No employees - create new employee profiles</div>
		    {{/if}}               
                </div>
            </article>
        </section>
    </div>
</div>


